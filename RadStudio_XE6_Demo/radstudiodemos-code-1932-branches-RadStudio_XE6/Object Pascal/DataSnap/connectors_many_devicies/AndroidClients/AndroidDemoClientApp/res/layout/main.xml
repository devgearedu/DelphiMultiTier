<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/main" android:gravity="center_vertical" android:paddingLeft="40dp" android:paddingRight="40dp">
	<TextView android:textColor="#000000" android:id="@+id/textView1" android:layout_width="wrap_content" android:text="Insert here your username" android:layout_height="wrap_content" android:paddingBottom="2dp" android:paddingLeft="2dp"></TextView>
	<EditText android:id="@+id/edtlogin" android:lines="1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:selectAllOnFocus="true" android:inputType="text|textAutoComplete|textPersonName" android:hint="Your username"></EditText>
	<Button android:id="@+id/btnlogin" android:layout_marginTop="15dp" android:text="login" android:layout_height="wrap_content" android:layout_width="fill_parent"></Button>
</LinearLayout>
