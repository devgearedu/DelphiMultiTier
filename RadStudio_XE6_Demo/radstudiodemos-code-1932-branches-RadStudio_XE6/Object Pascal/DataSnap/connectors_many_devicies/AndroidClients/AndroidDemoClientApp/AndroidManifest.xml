			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="MyPrefs" android:screenOrientation="portrait">
		</activity>
		<activity android:name="FollowingUsersActivity" android:label="List of active users"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name="FollowingTweetsActivity" android:screenOrientation="portrait">
		</activity>
		<activity android:name="DialogActivity" android:theme="@android:style/Theme.Dialog"/>
